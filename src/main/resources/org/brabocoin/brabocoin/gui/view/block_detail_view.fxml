<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.Double?>
<fx:root type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx/8.0.172-ea"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="org.brabocoin.brabocoin.gui.view.BlockDetailView">
    <fx:define>
        <Double fx:id="vgap" fx:value="15"/>
        <Double fx:id="hgap" fx:value="15"/>
    </fx:define>

    <GridPane vgap="$vgap" hgap="$hgap" style="-fx-padding: 0.8em;">
        <Label fx:id="titleLabel" styleClass="side-pane-title" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

        <Label text="Hash" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="hashLabel" styleClass="hash" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <TitledPane collapsible="false" text="Block header">
        <GridPane vgap="$vgap" hgap="$hgap">
            <Label text="Block height" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="blockHeightLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Nonce" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="nonceLabel" styleClass="hash" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Target value" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="targetValueLabel" styleClass="hash" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Merkle root" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="merkleRootLabel" styleClass="hash" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Previous block hash" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="previousBlockHashLabel" styleClass="hash" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </TitledPane>
    <TitledPane collapsible="false" text="Block details">
        <GridPane vgap="$vgap" hgap="$hgap">
            <Label text="Time received" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="timestampLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Number of transactions" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="numTransactionsLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Output total" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="outputTotalLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Transaction fees" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="feesLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Block reward" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="rewardLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Size" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label fx:id="sizeLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
    </TitledPane>
    <TitledPane collapsible="false" text="Transactions">
    </TitledPane>
</fx:root>
