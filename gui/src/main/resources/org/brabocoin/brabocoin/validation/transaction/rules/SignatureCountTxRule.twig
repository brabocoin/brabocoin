{% extends "../../Rule.twig" %}

{% block description %}
    This rule checks whether the number of signatures in the transactions is equal to the number of inputs in the transaction.
    If not, the transaction is invalid.<br>
    <br>
    {% if isCoinbase %}
    Transaction is coinbase: <code>{{ isCoinbase }}</code><br>
    {% else %}
    Input count: <code>{{inputCount}}</code><br>
    {% endif %}
    Signature count: <code>{{signatureCount}}</code><br>
    <br>
    {% if isCoinbase %}
        Check: <code>{{ signatureCount }} = 0</code><br>
    {% else %}
        Check: <code>{{ signatureCount }} = {{ inputCount }}</code><br>
    {% endif %}
{% endblock %}
