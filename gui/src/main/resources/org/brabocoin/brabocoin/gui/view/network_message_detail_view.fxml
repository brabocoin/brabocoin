<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>
<fx:root type="javafx.scene.layout.VBox"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="org.brabocoin.brabocoin.gui.view.NetworkMessageDetailView">
    <TitledPane text="Request JSON data" collapsible="false" VBox.vgrow="ALWAYS">
        <TextArea fx:id="jsonTextAreaRequest" VBox.vgrow="ALWAYS" editable="false"/>
    </TitledPane>
    <TitledPane text="Response JSON data" collapsible="false" VBox.vgrow="ALWAYS">
        <TextArea fx:id="jsonTextAreaResponse" VBox.vgrow="ALWAYS" editable="false"/>
    </TitledPane>
</fx:root>