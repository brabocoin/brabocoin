<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<fx:root type="javafx.scene.control.TabPane"
         xmlns="http://javafx.com/javafx/8.0.171"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="org.brabocoin.brabocoin.gui.view.WalletView">
    <Tab closable="false" text="Overview">
        <BorderPane>
            <top>
                <ToolBar>
                    <Button fx:id="buttonCreateTransaction" text="Create transaction" onAction="#createTransaction"/>
                    <Button fx:id="buttonCreateKeyPair" text="Create key pair" onAction="#createKeyPair"/>
                    <Separator/>
                    <Button fx:id="buttonSaveWallet" text="Save" onAction="#saveWallet"/>
                </ToolBar>
            </top>
            <center>
                <VBox>
                    <TitledPane collapsible="false" text="Balance info">
                        <GridPane style="-fx-padding: 1em">
                            <Label text="Balance:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <Label fx:id="balanceLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                            <Label text="Pending:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <Label fx:id="pendingLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            <Label text="Total pending balance:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <Label fx:id="totalPendingBalanceLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        </GridPane>
                    </TitledPane>
                    <TitledPane collapsible="false" text="Key pairs">
                        <TableView fx:id="keyPairsTableView" VBox.vgrow="ALWAYS"/>
                    </TitledPane>
                </VBox>
            </center>
        </BorderPane>
    </Tab>
    <Tab fx:id="txHistoryTab" closable="false" text="Transaction history"/>
</fx:root>
