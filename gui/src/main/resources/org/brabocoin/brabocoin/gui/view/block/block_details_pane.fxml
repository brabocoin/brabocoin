<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.GridPane?>
<?import java.lang.Double?>

<?import org.brabocoin.brabocoin.gui.control.SelectableLabel?>
<fx:root type="javafx.scene.control.TitledPane" collapsible="false" text="Block details" xmlns:fx="http://javafx.com/fxml"
         fx:controller="org.brabocoin.brabocoin.gui.view.block.BlockDetailsPane">
    <fx:define>
        <Double fx:id="vgap" fx:value="15"/>
        <Double fx:id="hgap" fx:value="15"/>
    </fx:define>

    <GridPane vgap="$vgap" hgap="$hgap">
        <Label fx:id="timestampLabel" text="Time received" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.hgrow="NEVER"/>
        <SelectableLabel fx:id="timestampField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>

        <Label text="Number of transactions" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.hgrow="NEVER"/>
        <SelectableLabel fx:id="numTransactionsField" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>

        <Label text="Output total" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.hgrow="NEVER"/>
        <SelectableLabel fx:id="outputTotalField" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>

        <Label text="Size" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.hgrow="NEVER"/>
        <SelectableLabel fx:id="sizeField" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
    </GridPane>
</fx:root>
